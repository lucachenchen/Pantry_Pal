<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PantryPlanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/anthracite</item>
        <item name="colorPrimaryVariant">@color/anthracite</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/scan_button</item>
        <item name="colorSecondaryVariant">@color/scan_button</item>
        <item name="colorOnSecondary">@color/scan_button</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@null</item>
    </style>

    <style name="Theme.PantryPlanner.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowEnterAnimation">@anim/open_activity</item>
        <item name="android:windowExitAnimation">@anim/close_activity</item>
        <item name="buttonStyle">@null</item>
    </style>

    <style name="Theme.PantryPlanner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PantryPlanner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>