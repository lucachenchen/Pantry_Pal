<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_inventory">

    <fragment
        android:id="@+id/navigation_inventory"
        android:name="com.example.pantryplanner.ui.inventory.InventoryFragment"
        android:label="@string/title_pantry"
        tools:layout="@layout/fragment_inventory" />

    <fragment
        android:id="@+id/navigation_menu"
        android:name="com.example.pantryplanner.ui.menu.MenuFragment"
        android:label="@string/title_menu"
        tools:layout="@layout/fragment_menu" />

    <fragment
        android:id="@+id/navigation_stats"
        android:name="com.example.pantryplanner.ui.stats.StatsFragment"
        android:label="@string/title_stats"
        tools:layout="@layout/fragment_stats" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.pantryplanner.ui.stats.StatsFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

</navigation>